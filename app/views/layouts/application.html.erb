<!DOCTYPE html>
<%= render "/refinery/html_tag" %>
<% site_bar = render('/refinery/site_bar', :head => true) -%>
<head>
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  <%= render "/refinery/head" %>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.0/font/bootstrap-icons.css">
</head>
<body id="<%= canonical_id @page %>" class="<%= view_template_class @page %> bg-light">
  <%= site_bar -%>
  <div id="page_container"  class='d-flex flex-column min-vh-100'>
    <header>
            <%= render "/refinery/navbar" -%>
    </header>
    <main id="page" role="main" class="flex-grow-1<%= " container" if not current_page?('/') %>">
      <%= yield %>
    </main>
    <footer role="contentinfo" class="footer py-4 bg-secondary text-light">
      <%= render "/refinery/footer" %>
    </footer>
  </div>
  <%= render "/refinery/javascripts" %>
</body>
</html>

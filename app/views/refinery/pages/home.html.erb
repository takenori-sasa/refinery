<section id="top-carousel" class="jumbotron-carousel">
  <% @page.images.each_with_index do |image, index| %>
    <%= tag.div class:"jumbtron-carousel-item",style:"background-image:url(#{image.url});background-position: center center;background-size: cover;" do %>
      <%= tag.div class:'container-fluid d-flex flex-column justify-content-center text-light m-n6 align-items-center',style:'backdrop-filter: blur(6px); -webkit-backdrop-filter: blur(6px);min-height:100vmin;' do %>
        <h1 class="display-3">      
          <%= Refinery::Core.site_name %>
        </h1>
        <%= raw @page.content_for(:body) %>
      <% end %>
    <% end %>
  <% end %>
</section>
<% if (images=@page.images).any? %>
  <%= tag.section class:"parallax d-flex flex-column justify-content-center align-items-center", 'data-parallax':"scroll", 'data-image-src':"#{images.sample.url}",style:'min-height:100vmin;' do %>
    <h2 class='text-white display-2'>Sample</h2>
  <% end %>
<% end %>

<section id='About' class="container text-center my-5">
  <h1 class='d-inline-flex bg-dark text-light px-2 font-weight-light rounded-sm mb-3 text-uppercase'><%= @about.title %></h1>
  <div class='row pb-5'>
    <div class="col-md-4">
      <h2 class="display-2 pt-4">
        <%= Refinery::Core.site_name %>
      </h2>
      <i class="bi-activity" style="font-size: 4rem;"></i>
    </div>
    <div class='col-md-8'>
      <%= raw @about.content_for(:body) %>
    </div>
  </div>
  <div class='row flex-row-reverse'>
    <div class="col-md-4">
      <h1 class="display-4">
        <%= Refinery::Core.site_name %>
      </h1>
    </div>
    <div class='col-md-7'>
      <%= raw @about.content_for(:side_body) %>
    </div>
  </div>
</section>
<section id='member' class="container-fluid text-center py-5" style='background-color: #e8f3e8 ;'>
  <h1 class='d-inline-flex bg-dark text-light px-2 font-weight-light rounded-sm text-uppercase'>Members</h1>
  <div class='col'>
    <p>ランダムに<%= @random_members.size %>人表示しています</p>
  </div>
  <div class="container slider text-center">
    <% @random_members.each_with_index do |member,index| %>
      <%= tag.div class:'slider-item' do %>
        <%= link_to(members_members_path(:anchor => "member-#{member.id }"),:class=>'text-decoration-none text-reset mb-5 mx-3') do %>
          <%= image_fu member.photo, nil ,class:'rounded-circle d-inline-flex img-thumbnail',style:"height: 180px;object-fit: cover;width: 180px;"%>
          <h4 class='mt-3'>
            <%=raw member.name %>
          </h4>
          <p><%=raw member.occupation %></p>
        <% end %>
      <% end %>
    <% end %>
  </div>
  <%= link_to('more', members_members_path,
              class:"btn btn-outline-success mt-3",role:"button")%>
</section>
<section id='blog' class="container py-5">
  <div class="text-center">
    <h1 class='d-inline-flex bg-dark text-light px-2 font-weight-light rounded-sm mb-4 text-uppercase'><%= @blog.title %></h1>
  </div>
  <div class="lead text-center">
    <%= raw @blog.content_for(:body) %>
  </div>
  <% if @blog_posts.any? %>
    <div id="blog_posts" class="card-columns text-reset mb-3">
      <%= render :partial => "/refinery/blog/shared/post", :collection => @blog_posts %>
    </div>
  <% end %>
  <div class="text-center">
    <%= link_to('more', blog_root_path,
                class:"btn btn-outline-dark",role:"button")%>
  </div>
</section>
<section id='contact' class="container-fluid py-5" style='background-color: #e8f3e8 ;'>
  <div class="text-center container">
    <h1 class='d-inline-flex bg-dark text-light px-2 font-weight-light rounded-sm mb-4 text-uppercase'><%= @contact.title %></h1>
    <%= raw @contact.content_for(:body) %>
    <%= link_to('more', inquiries_new_inquiry_path,
                class:"btn btn-outline-success",role:"button")%>
  </div>
</section>

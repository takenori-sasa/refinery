<% content_for :body_content_title do %>
  <%= @member.name %>
<% end %>

<% content_for :body do %>
  <section>
    <h1>Name</h1>
    <p>
      <%=raw @member.name %>
    </p>
  </section>
  <section>
    <h1>Romanized Name</h1>
    <p>
      <%=raw @member.romanized_name %>
    </p>
  </section>
  <section>
    <h1>Photo</h1>
    <p>
      <%= image_fu @member.photo, nil %>
    </p>
  </section>
  <section>
    <h1>University</h1>
    <p>
      <%=raw @member.university %>
    </p>
  </section>
  <section>
    <h1>Occupation</h1>
    <p>
      <%=raw @member.occupation %>
    </p>
  </section>
  <section>
    <h1>Blurb</h1>
    <p>
      <%=raw @member.blurb %>
    </p>
  </section>
<% end %>

<% content_for :side_body do %>
  <aside>
    <h2><%= t('.other') %></h2>
    <ul id="members">
      <% @members.each do |member| %>
        <li>
          <%= link_to member.name, refinery.members_member_path(member) %>
        </li>
      <% end %>
    </ul>
  </aside>
<% end %>

<%= render '/refinery/content_page' %>

<%= form_for [refinery, :members_admin, @member] do |f| -%>
  <%= render '/refinery/admin/error_messages',
              :object => @member,
              :include_object_name => true %>

  <div class='field'>
    <%= f.label :name -%>
    <%= f.text_field :name, :class => 'larger widest' ,:placeholder => '山田 太郎'-%>
  </div>

  <div class='field'>
    <%= f.label :romanized_name -%>
    <%= f.text_field :romanized_name ,:placeholder => 'Yamada Taro'-%>
  </div>

  <div class='field'>
    <%= f.label :photo -%>
    <%= render '/refinery/admin/image_picker',
               :f => f,
               :field => :photo_id,
               :image => @member.photo,
               :toggle_image_display => false -%>
  </div>

  <div class='field'>
    <%= f.label :university -%>
    <%= f.text_field :university-%>
  </div>

  <div class='field'>
    <%= f.label :occupation -%>
    <%= f.select(:occupation, Refinery::Members::Member::OCCUPATIONS.collect { |d| [d, d.capitalize] })%>
  </div>

  <div class='field'>
    <%= render '/refinery/admin/wysiwyg',
                :f => f,
                :fields => [:blurb],
                :object => "members/member" -%>
  </div>

  <%= render '/refinery/admin/form_actions', f: f,
             continue_editing: false,
             delete_title: t('delete', scope: 'refinery.members.admin.members.member'),
             delete_confirmation: t('message', scope: 'refinery.admin.delete', title: @member.name),
             cancel_url: refinery.members_admin_members_path -%>
<% end -%>

<% content_for :javascripts do -%>
  <script>
    $(document).ready(function(){
      page_options.init(false, '', '');
    });
  </script>
<% end -%>

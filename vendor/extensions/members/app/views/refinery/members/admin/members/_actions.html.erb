<ul>
  <% if ::Refinery::Members::Admin::MembersController.searchable? %>
    <li>
      <%= render '/refinery/admin/search', :url => refinery.members_admin_members_path %>
    </li>
  <% end %>
  <li>
    <%= action_label :add, refinery.new_members_admin_member_path, t('.create_new') %>
  </li>
<% if !searching? && ::Refinery::Members::Admin::MembersController.sortable? && ::Refinery::Members::Member.many? %>
  <li>
    <%= action_label :reorder,
                     refinery.members_admin_members_path,
                     t('.reorder', what:  "Members"), id: 'reorder_action'%>
    <%= action_label :reorder_done,
                     refinery.members_admin_members_path,
                      t('.reorder_done', what: "Members"), id: 'reorder_action_done', class: 'hidden'%>
  </li>
<% end %>
</ul>

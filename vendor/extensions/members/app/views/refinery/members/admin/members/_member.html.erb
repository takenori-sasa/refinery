<li class='clearfix record <%= cycle("on", "on-hover") %>' id="<%= dom_id(member) -%>">
  <span class='title'>
    <%= member.name %>
  </span>

  <span class='preview'></span>

  <span class='actions'>
    <%= action_icon(:preview, refinery.members_member_path(member), t('.view_live_html')) %>
    <%= action_icon(:edit,    refinery.edit_members_admin_member_path(member), t('.edit') ) %>
    <%= action_icon(:delete,  refinery.members_admin_member_path(member), t('.delete'),
      { class: "cancel confirm-delete",
        data: {confirm: t('message',  scope: 'refinery.admin.delete', title: member.name)}}  ) %>
  </span>
</li>
